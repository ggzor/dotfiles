{
  // Experimental configuration
  "editor.inlineSuggest.enabled": true,
  "editor.wordBasedSuggestions": true,
  "editor.wordBasedSuggestionsMode": "allDocuments",
  //
  // Edition Settings
  "editor.detectIndentation": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.suggestSelection": "first",
  "editor.wordWrapColumn": 90,
  "[typescript][javascript][json][jsonc][html][css][javascriptreact][typescriptreact][scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[haskell]": {
    "editor.formatOnSaveMode": "file"
  },
  "[sql]": {
    "editor.formatOnSave": false
  },
  "editor.tabSize": 2,
  "[python]": {
    "editor.tabSize": 4
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  //
  // Debugging settings
  "debug.inlineValues": "auto",
  //
  // Visual settings
  "workbench.colorTheme": "Night Owl",
  "editor.fontFamily": "'JetBrainsMono Nerd Font', 'monospace', monospace",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.fontLigatures": false,
  "editor.minimap.enabled": false,
  "window.dialogStyle": "custom",
  "workbench.colorCustomizations": {
    "[Night Owl]": {
      "editorInlayHint.background": "#ffffff00",
      "editorInlayHint.foreground": "#d6deeb85"
    }
  },
  //
  // Works better with a tiling window manager
  "window.titleBarStyle": "native",
  //
  // Cleaner vscode
  "workbench.activityBar.visible": false,
  "workbench.sideBar.location": "right",
  "window.menuBarVisibility": "toggle",
  "workbench.startupEditor": "none",
  "editor.hideCursorInOverviewRuler": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  //
  // Exclude files from tree
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/*.olean": true,
    "out": false
  },
  //
  // Terminal
  "terminal.integrated.allowChords": false,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "/usr/bin/zsh"
    }
  },
  //
  // Extensions
  //
  // Intellicode
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  //
  // Languages
  "idris.idris2Mode": true,
  "idris.idrisPath": "idris2",
  "haskell.formattingProvider": "ormolu",
  "haskell.manageHLS": "PATH",
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindowMode": "perFile",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "rust-analyzer.checkOnSave.command": "clippy",
  "typescript.updateImportsOnFileMove.enabled": "always",
  //
  // VIM
  "vim.changeWordIncludesWhitespace": true,
  "vim.easymotion": true,
  "vim.easymotionKeys": "aeiousdfjl",
  "vim.leader": " ",
  "vim.replaceWithRegister": true,
  "vim.surround": true,
  "vim.visualstar": true,
  "vim.hlsearch": true,
  "vim.ignorecase": false,
  //
  // Required for remapped esc to work
  "keyboard.dispatch": "keyCode",
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-k>": false
  },
  "vim.easymotionMarkerForegroundColorOneChar": "#ff007c",
  "vim.easymotionMarkerForegroundColorTwoCharFirst": "#00dfff",
  "vim.easymotionMarkerForegroundColorTwoCharSecond": "#2b8db3",
  //
  // Mappings at the end, too noisy
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["ñ", "k"],
      "after": ["g", "h"]
    },
    {
      "before": ["ñ", "n"],
      "commands": [":nohl"]
    },
    {
      "before": ["ñ", "q"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    {
      "before": ["ñ", "ñ"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<leader>", "h"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["<leader>", "l"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["ñ", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["ñ", "a"],
      "after": ["<C-^>"]
    },
    // Replace with register (similar to vim subversive)
    {
      "before": ["s"],
      "after": ["\"", "\"", "g", "r"]
    },
    // easymotion
    {
      "before": ["K"],
      "after": ["<leader>", "<leader>", "k"]
    },
    {
      "before": ["J"],
      "after": ["<leader>", "<leader>", "j"]
    },
    // Git
    {
      "before": ["g", "h"],
      "commands": ["workbench.action.editor.previousChange"]
    },
    {
      "before": ["g", "l"],
      "commands": ["workbench.action.editor.nextChange"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["K"],
      "after": ["<leader>", "<leader>", "k"]
    },
    {
      "before": ["J"],
      "after": ["<leader>", "<leader>", "j"]
    }
  ]
}
